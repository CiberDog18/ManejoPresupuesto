@model Categoria
@{
    ViewData["Title"] = "Borrar Categoria";
}

<h3 class="mb-3">¿Está seguro que desea borrar la categoría</h3>

<form asp-action="BorrarCategoria">
    <input type="hidden" asp-for="id" />

    <button type="submit" class="btn btn-danger">Borrar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelas</a>
</form>
